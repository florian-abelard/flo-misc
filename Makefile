#------------------------------------------------------------------------------
# flo-misc Makefile
#------------------------------------------------------------------------------

SHELL := /bin/bash
HOST_SOURCE_PATH=$(shell pwd)

#------------------------------------------------------------------------------

include makefiles/config-files.mk
include makefiles/help.mk

#------------------------------------------------------------------------------

.DEFAULT_GOAL := help

help:
	@echo "================================================================================"
	@echo "flo-misc Makefile"
	@echo "================================================================================"
	@echo
	@perl -e '$(HELP_FUNC)' $(MAKEFILE_LIST)
	@echo "================================================================================"

#------------------------------------------------------------------------------

.PHONY: help
